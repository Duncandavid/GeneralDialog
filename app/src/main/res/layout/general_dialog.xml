<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginRight="@dimen/margin_28"
    android:layout_marginLeft="@dimen/margin_28"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/Theme.MaterialComponents.Light.NoActionBar.Bridge">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/general_dialog_bg"
        android:gravity="center"
        android:padding="@dimen/margin_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/Avenir.Heavy"
            android:id="@+id/dialogTitle"
            android:layout_gravity="left"
            android:textSize="@dimen/font_size_18"
            android:textColor="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginBottom="@dimen/margin_20"
            style="@style/Avenir.Roman"
            android:layout_gravity="left"
            android:id="@+id/dialogContent"
            android:textSize="@dimen/font_size_14"
            android:textColor="@color/gray_eighty"
            android:autoLink="all"
            android:linksClickable="true"
            android:textColorLink="@color/activate_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/positiveButton"
            style="@style/general_dialog_button"
            android:stateListAnimator="@null"
            android:background="@drawable/positive_button_bg"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/negativeButton"
            style="@style/general_dialog_button"
            android:layout_marginTop="@dimen/margin_12"
            android:stateListAnimator="@null"
            android:background="@drawable/negative_button_bg"
            android:textColor="@color/activate_blue" />

        <TextView
            style="@style/Avenir.Roman"
            android:id="@+id/cancelText"
            android:layout_marginTop="@dimen/margin_12"
            android:textStyle="bold"
            android:textSize="@dimen/font_size_16"
            android:textColor="@color/activate_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Avenir">
    </style>

    <style name="Avenir.Black">
        <item name="android:fontFamily">@font/avenir_black</item>
        <!-- Avenir Black/Regular -->
    </style>

    <style name="Avenir.Roman">
        <item name="android:fontFamily">@font/avenir_roman</item>
    </style>

    <style name="Avenir.Heavy">
        <item name="android:fontFamily">@font/avenir_heavy</item>
    </style>

    <style name="Avenir.Heavy.B1">
        <item name="android:textSize">@dimen/font_size_B1</item>
    </style>

    <style name="GenerlTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Needed to make Avenir default -->
        <item name="android:textViewStyle">@style/Avenir.Black</item>
        <item name="android:colorPrimaryDark">@color/status_bar_color</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:colorAccent">@color/text_blue</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:actionMenuTextColor">@android:color/black</item>
        <item name="actionMenuTextColor">@android:color/black</item>
    </style>

    <style name="general_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.8</item>
    </style>

    <style name="general_dialog_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/margin_40</item>
        <item name="android:textSize">@dimen/font_size_16</item>
    </style>
</resources>